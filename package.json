{
  "name": "node-coap-client",
  "version": "0.5.3",
  "description": "Clientside implementation of the CoAP protocol with DTLS support.",
  "keywords": [
    "coap",
    "coaps",
    "dtls",
    "iot",
    "tradfri"
  ],
  "main": "./build/CoapClient.js",
  "types": "./build/CoapClient.d.ts",
  "author": {
    "name": "AlCalzone",
    "email": "d.griesel@gmx.net"
  },
  "license": "MIT",
  "homepage": "https://github.com/AlCalzone/node-coap-client",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/debug": "0.0.30",
    "@types/mocha": "^2.2.48",
    "@types/node": "^6.0.88",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.0.0",
    "nyc": "^11.4.1",
    "source-map-support": "^0.5.3",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlCalzone/node-coap-client.git"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "node-dtls-client": "^0.3.0"
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "scripts": {
    "watch": "tsc --watch",
    "test:ts": "node node_modules/mocha/bin/mocha --require ts-node/register --require source-map-support/register src/**/*.test.ts --exit",
    "test": "npm run test:ts",
    "coverage": "node node_modules/nyc/bin/nyc npm run test",
    "lint:ts": "tslint",
    "lint": "npm run lint:ts \"src/**/*.ts\""
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "readme": "README.md"
}
