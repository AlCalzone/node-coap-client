{
  "name": "node-coap-client",
  "version": "0.5.1",
  "description": "Clientside implementation of the CoAP protocol with DTLS support.",
  "keywords": [
    "coap",
    "coaps",
    "dtls",
    "iot",
    "tradfri"
  ],
  "main": "./build/CoapClient.js",
  "types": "./build/CoapClient.d.ts",
  "author": {
    "name": "AlCalzone",
    "email": "d.griesel@gmx.net"
  },
  "license": "MIT",
  "homepage": "https://github.com/AlCalzone/node-coap-client",
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.43",
    "@types/node": "^6.0.88",
    "chai": "^4.1.2",
    "mocha": "^3.5.3",
    "nyc": "^11.2.1",
    "source-map-support": "^0.4.18",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlCalzone/node-coap-client.git"
  },
  "dependencies": {
    "debug": "^3.0.1",
    "node-dtls-client": "^0.2.2"
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "scripts": {
    "compile": "node_modules/.bin/tsc -p tsconfig.json",
    "test": "nyc mocha --recursive --compilers ts-node/register --require source-map-support/register --full-trace src/**/*.test.ts",
    "lint": "npm run tslint \"src/**/*.ts\"",
    "tslint": "tslint"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "readme": "README.md"
}
